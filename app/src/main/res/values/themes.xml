<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Influencers_App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">#5C6FDA</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/filter_dialog_bg</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

<!--    <style name="customMaterialRangeSlider" parent="Widget.MaterialComponents.Slider">-->
<!--        <item name="android:thumbTint">@color/blue</item>-->
<!--        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>-->
<!--    </style>-->

    <style name="customMaterialRangeSlider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/blue</item>
        <item name="tickVisible">false</item>
        <item name="android:stepSize">1</item>
        <item name="trackColorInactive">#F0F0F0</item>
        <item name="trackColorActive">@color/blue</item>
        <item name="trackHeight">10dp</item>
        <item name="labelStyle">@style/Tooltip</item>
    </style>

    <style name="Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!--This is the Tooltip Background Color -->
        <item name="backgroundTint">@color/blue</item>
    </style>

</resources>