<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.edit_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit_profile_back_btn"
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/backward_arrow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/edit_profile_lout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/edit_profile_back_btn"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/about_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:lineHeight="24dp"
                    android:text="Edit Profile"
                    android:textColor="#1E1E1E"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="133.74dp"
                    android:layout_height="2.55dp"
                    android:layout_marginLeft="14.78dp"
                    android:layout_marginTop="3.04dp"
                    android:src="@drawable/dashed_line"
                    app:tint="#B6A6FF" />


            </LinearLayout>

            <View
                android:id="@+id/edit_profile_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_lout1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_imgv_edit_profile"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:elevation="4dp"
                app:cardCornerRadius="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_line1">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_user" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="65dp"
                android:elevation="5dp"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_line1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_image"
                    android:src="@drawable/edit_icon"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/edit_profile_lout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_imgv_edit_profile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineHeight="21dp"
                        android:text="Full Name"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/views_bg"
                        android:fontFamily="@font/poppins"
                        android:lineHeight="21dp"
                        android:padding="16dp"
                        android:text="Sarah Milton"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineHeight="21dp"
                        android:text="Email ID"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/views_bg"
                        android:fontFamily="@font/poppins"
                        android:lineHeight="21dp"
                        android:padding="16dp"
                        android:text="sarahmilton@gmail.com"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineHeight="21dp"
                        android:text="Influencer Category"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/views_bg"
                        android:padding="16dp">

                        <Spinner
                            android:id="@+id/influencer_catg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@null"
                            android:fontFamily="@font/poppins_medium"
                            android:lineHeight="21dp"
                            android:textColor="@color/Nero"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="7dp"
                            android:src="@drawable/drop_down_icon" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineHeight="21dp"
                        android:text="Gender"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:id="@+id/radio_group_time_filter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.79dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/female_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:buttonTint="#552FFF"
                                android:checked="true"
                                android:fontFamily="@font/poppins"
                                android:paddingLeft="9.03dp"
                                android:text="Female"
                                android:textColor="#1E1E1E"
                                android:textSize="14dp" />

                            <RadioButton
                                android:id="@+id/male_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:buttonTint="#552FFF"
                                android:fontFamily="@font/poppins"
                                android:paddingLeft="9.03dp"
                                android:text="Male"
                                android:textColor="#1E1E1E"
                                android:textSize="14dp" />

                            <RadioButton
                                android:id="@+id/other_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:layout_marginLeft="30dp"
                                android:buttonTint="#552FFF"
                                android:fontFamily="@font/poppins"
                                android:paddingLeft="9.03dp"
                                android:text="Other"
                                android:textColor="#1E1E1E"
                                android:textSize="14dp" />

                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/card_border"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    android:src="@drawable/instagram" />

                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/views_bg"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="21dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#F9F7FF"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="top"
                                    android:hint="Instagram Handle"
                                    android:lineHeight="21dp"
                                    android:text="sarah_milton"
                                    android:textColor="#898989"
                                    android:textSize="14dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.34"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.5" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                            />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="43dp"
                                android:background="@drawable/card_border"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:src="@drawable/youtube" />

                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/views_bg">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="21dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#F9F7FF"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="top"
                                    android:hint="YouTube Handle"
                                    android:lineHeight="21dp"
                                    android:text="sarah_milton"
                                    android:textColor="#898989"
                                    android:textSize="14dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.34"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.5" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineHeight="21dp"
                        android:text="D.O.B"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/views_bg"
                        android:fontFamily="@font/poppins"
                        android:lineHeight="21dp"
                        android:padding="16dp"
                        android:text="25th April 1997"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineHeight="21dp"
                        android:text="Language"
                        android:textColor="@color/Nero"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/views_bg"
                        android:padding="16dp">

                        <Spinner
                            android:id="@+id/languge_catg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:background="@null"
                            android:fontFamily="@font/poppins_medium"
                            android:lineHeight="21dp"
                            android:textColor="@color/Nero"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="7dp"
                            android:src="@drawable/drop_down_icon" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:id="@+id/cancel_btn_editProfile"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/border_bg_blue"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Cancel"
                        android:textColor="@color/blue"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textAllCaps="false" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:id="@+id/save_btn_editProfile"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Save"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:paddingRight="10dp"
                        android:paddingLeft="25dp"
                        android:gravity="center"
                        android:textAllCaps="false" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>