<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_application_cardv"
        app:cardElevation="5dp"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                app:cardElevation="5dp"
                android:id="@+id/logo_my_application_cardv"
                app:cardCornerRadius="35dp"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/my_appli_brand_logo"
                    android:src="@drawable/the_ordinary"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="12dp"
                android:layout_toStartOf="@+id/chat_view_brief_section"
                android:layout_toEndOf="@+id/logo_my_application_cardv"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/brand_name_my_application_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/chat_icon_my_application_card"
                        android:fontFamily="@font/poppins_medium"
                        android:text="MYGLAMM"
                        android:textAllCaps="true"
                        android:textColor="#171D33"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/chat_icon_my_application_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:src="@drawable/chat_in_black"
                        android:visibility="gone"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/application_date_in_my_appication_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins"
                    android:text="20 January, 2019"
                    android:textAlignment="center"
                    android:textColor="#757F8C"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_application_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Rejected"
                        android:layout_alignParentLeft="true"
                        android:textSize="10dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                    <TextView
                        android:id="@+id/view_brief_my_application"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:visibility="gone"
                        android:layout_below="@id/chat_icon_my_application_card"
                        android:layout_gravity="bottom"
                        android:text="@string/View_brief"
                        android:layout_alignParentRight="true"
                        android:textColor="#552FFF"/>

                </RelativeLayout>

            </LinearLayout>

