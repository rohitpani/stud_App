<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.application_status">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/applicatin_status_back_btn"
                android:layout_width="9.5dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/backward_arrow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/applicatin_status_lout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/applicatin_status_back_btn"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/about_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:lineHeight="24dp"
                    android:text="Application Status"
                    android:textColor="#1E1E1E"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="133.74dp"
                    android:layout_height="2.55dp"
                    android:layout_marginLeft="14.78dp"
                    android:layout_marginTop="3.04dp"
                    android:src="@drawable/dashed_line"
                    app:tint="#B6A6FF" />


            </LinearLayout>

            <View
                android:id="@+id/application_status_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/applicatin_status_lout1" />

            <LinearLayout
                android:id="@+id/application_status_lout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/application_status_line1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/brand_imgv_appcn_status_card"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="37dp">

                        <ImageView
                            android:id="@+id/brand_imgv_appcn_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/air_bnb" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@id/brand_imgv_appcn_status_card"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/brand_id_my_appcn_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/id_bg"
                            android:fontFamily="@font/poppins"
                            android:paddingLeft="4dp"
                            android:paddingTop="1dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="1dp"
                            android:text="#ID890760"
                            android:textAlignment="center"
                            android:textColor="#363942"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/brand_name_my_appcn_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="AIRBNB"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#171D33"
                            android:textSize="14dp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
