                            android:src="@drawable/in_progress_status"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/rejected_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/red_line"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-15.5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/rejected_status"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/pending_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gray_line"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/pending_status"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applicatin_status_lout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
