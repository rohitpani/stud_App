                            android:layout_width="2dp"
                            android:layout_height="87dp"
                            android:layout_below="@+id/green_profile"
                            android:layout_centerHorizontal="true"
                            android:background="@color/green" />

                        <ImageView
                            android:id="@+id/red_line"
