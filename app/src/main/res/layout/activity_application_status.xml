                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins"
                            android:text="20 January, 2019"
                            android:textAlignment="center"
                            android:textColor="#757F8C"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43.5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/profile_appcn_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Profile -"
                            android:textAlignment="center"
                            android:textColor="#171D33"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/profile_status_appcn_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="3dp"
                            android:paddingRight="18dp"
                            android:paddingBottom="3dp"
                            android:text="Approved"
                            android:textAlignment="center"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="83dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/appcn_status_my_applicn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Application Status - "
                            android:textAlignment="center"
                            android:textColor="#171D33"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/appcn_status_my_application"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="3dp"
                            android:paddingRight="18dp"
                            android:paddingBottom="3dp"
                            android:text="In Progress"
                            android:textAlignment="center"
                            android:textSize="10dp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/completed_date_in_applicatin_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:visibility="gone"
                        android:text="Completed on 28th Jan, 2019. 2:50pm"
                        android:textColor="#898989"
                        android:textSize="10dp" />

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/mark_as_cmplt_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/poppins_semibold"
                android:text="Mark it as Complete"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:layout_margin="40dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/application_status_completed_details_lnout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/mark_as_cmplt_btn">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/application_status_frag_line2"
