                    android:layout_marginTop="11dp" />

                <LinearLayout
                    android:id="@+id/applicatin_status_lout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:lineHeight="24dp"
                        android:text="Submitted Links"
                        android:textColor="#1E1E1E"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="133.74dp"
                        android:layout_height="2.55dp"
                        android:layout_marginLeft="14.78dp"
                        android:layout_marginTop="3.04dp"
                        android:src="@drawable/dashed_line"
                        app:tint="#B6A6FF" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applicatin_status_lout6"
