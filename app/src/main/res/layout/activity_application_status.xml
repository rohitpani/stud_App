                        <ImageView
                            android:id="@+id/orange_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/applied_line"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-15.5dp"
