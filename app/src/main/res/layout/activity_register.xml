<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Create an account"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="#0F2851"
                android:layout_marginTop="15dp"
                android:lineHeight="28dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dashed_line"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="27.61dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="19dp">
                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Full Name"
                    android:textSize="14dp"
                    android:lineHeight="21dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/light_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:lineHeight="21dp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>
                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/views_bg"
                >
                
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_fullname"
                    android:background="#F9F7FF"
                    android:drawableLeft="@drawable/username"
                    android:layout_gravity="center"
                    android:drawablePadding="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:hint="Enter your name"
                    android:fontFamily="@font/poppins"
                    android:inputType="textPersonName"/>
                
            </LinearLayout>
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/full_name_error"
                        android:background="@android:color/transparent"
                        android:textColor="@color/red"
                        android:layout_gravity="center"
                        android:drawablePadding="7dp"
                        android:textSize="10dp"
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="27.61dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="19dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mobile Number"
                        android:textSize="14dp"
                        android:lineHeight="21dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/light_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:lineHeight="21dp"
                        android:textColor="@color/red"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/views_bg">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_mobile_no"
                        android:maxLength="10"
                        android:background="#F9F7FF"
                        android:drawableLeft="@drawable/phone"
                        android:layout_gravity="center"
                        android:drawablePadding="7dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textSize="14dp"
                        android:inputType="phone"
                        android:fontFamily="@font/poppins"
                        android:hint="Enter your Mobile Number"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobile_no_error"
                        android:background="@android:color/transparent"
                        android:textColor="@color/red"
                        android:layout_gravity="center"
                        android:drawablePadding="7dp"
                        android:textSize="10dp"
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="27.61dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="19dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email Id"
                        android:textSize="14dp"
                        android:lineHeight="21dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/light_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:lineHeight="21dp"
                        android:textColor="@color/red"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/views_bg">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_email"
                        android:background="#F9F7FF"
                        android:drawableLeft="@drawable/mail"
                        android:layout_gravity="center"
                        android:drawablePadding="7dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textSize="14dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppins"
                        android:hint="Enter your Email"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_id_error"
                        android:background="@android:color/transparent"
                        android:textColor="@color/red"
                        android:layout_gravity="center"
                        android:drawablePadding="7dp"
                        android:textSize="10dp"
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="27.61dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="19dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Password"
                        android:textSize="14dp"
                        android:lineHeight="21dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/light_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:lineHeight="21dp"
                        android:textColor="@color/red"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/views_bg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/user_password"
                            android:background="#F9F7FF"
                            android:drawableLeft="@drawable/locked"
                            android:layout_gravity="center"
                            android:drawablePadding="7dp"
                            android:layout_toStartOf="@+id/pswd_toggle_register"
                            android:paddingLeft="15dp"
                            android:textSize="14dp"
                            android:hint="Enter Password"
                            android:paddingRight="10dp"
                            android:inputType="textPassword"
                            android:fontFamily="@font/poppins" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pswd_toggle_register"
                            android:layout_centerVertical="true"
                            android:tag="1"
                            android:visibility="gone"
                            android:src="@drawable/view_off"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>


                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/password_error"
                        android:background="@android:color/transparent"
                        android:textColor="@color/red"
                        android:layout_gravity="center"
                        android:drawablePadding="7dp"
                        android:textSize="10dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="28.61dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="19dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Connect your Social accounts"
                        android:textSize="14dp"
                        android:lineHeight="21dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/light_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:lineHeight="21dp"
                        android:textColor="@color/red"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_border"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:src="@drawable/instagram" />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/views_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="#F9F7FF"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="Instagram Handle"
                                android:lineHeight="21dp"
                                android:textColor="#898989"
                                android:textSize="14dp"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.34"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                            />
                        
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="45dp"
                            android:layout_height="43dp"
                            android:orientation="vertical"
                            android:background="@drawable/card_border">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/youtube"/>

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/views_bg">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="#F9F7FF"
                                android:gravity="top"
                                android:fontFamily="@font/poppins_medium"
                                android:hint="YouTube Handle"
                                android:lineHeight="21dp"
                                android:textColor="#898989"
                                android:textSize="14dp"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.34"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="28.61dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="19dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chkbox"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:button="@drawable/register_check_box"
                    app:useMaterialThemeColors="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/condition"
                    android:textSize="12dp"
                    android:lineHeight="18dp"
                    android:id="@+id/privy_policy_terms_conditions"
                    android:layout_marginLeft="12dp"
                    android:textColor="#5A5A5A"
                    android:textColorLink="#5A5A5A"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_height="36dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="18dp">

<!--                <Button-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="47dp"-->
<!--                    android:background="@drawable/button_bg"-->
<!--                    android:drawableRight="@drawable/arrow_long_right"-->
<!--                    android:fontFamily="@font/poppins_semibold"-->
<!--                    android:text="Sign Up"-->
<!--                    android:id="@+id/sign_up_btn"-->
<!--                    android:textAllCaps="false" />-->

                <LinearLayout
                    android:id="@+id/sign_up_btn"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/button_bg"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/lnout_btn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Sign Up"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5" />

                        <ImageView
                            android:id="@+id/forward_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow_long_right"
                            android:layout_marginRight="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:text="Already a Member?"
                        android:textColor="#000033"
                        android:fontFamily="@font/poppins"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:text="Login"
                        android:textColor="#552FFF"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/login_tv_register"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>