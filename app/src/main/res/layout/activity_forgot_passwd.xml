<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.forgot_passwd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:textSize="22dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Forgot your Password"
            android:lineHeight="29dp"
            android:layout_gravity="center"
            android:textColor="#0F2851"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="224dp"
            android:layout_height="2.55dp"
            android:src="@drawable/dashed_line"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"/>
        
        <TextView
            android:layout_width="282dp"
            android:layout_height="54dp"
            android:text="Enter your registered Mobile Number to reset your password"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#1E1E1E"
            android:textSize="16dp"
            android:lineHeight="24dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="19dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mobile Number"
                    android:textSize="14dp"
                    android:lineHeight="21dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/light_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/views_bg">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:background="#F9F7FF"
                    android:drawableLeft="@drawable/phone"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:drawablePadding="7dp"
                    android:textSize="14dp"
                    android:inputType="phone"
                    android:hint="Enter your Mobile Number"/>


            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:id="@+id/login"
            android:background="@drawable/button_bg"
            android:drawableRight="@drawable/arrow_long_right"
            android:fontFamily="@font/poppins_semibold"
            android:text="Enter"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>